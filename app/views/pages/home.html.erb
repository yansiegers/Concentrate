<div class="flex justify-center">
  <div class="bg-gray-300 rounded-md p-5">
    <%= form_with url: "/", method: :get do |form| %>
      <div class="mb-5">
        <%= form.label :class_time, 'Werktijd:' %>
        <%= form.number_field :class_time, value: 20, in: 5..45 %>
        min.
      </div>

      <div class="mb-5">
        <%= form.label :free_time, 'Pauze:' %>
        <%= form.number_field :free_time, value: 5, in: 5..45 %>
        min.
      </div>

      <div class="mb-5">
        <div>
          <%= form.radio_button :class_type, 'house_time', checked: true %>
          <%= form.label :class_type_screen, 'Huistijd' %>
        </div>
        <div>
          <%= form.radio_button :class_type, 'class_time' %>
          <%= form.label :class_type_remote, 'Les' %>
        </div>
      </div>
      <div class="mb-5">
        <div>
          <%= form.radio_button :device, 'screen' %>
          <%= form.label :device_screen, 'Scherm' %>
        </div>
        <div>
          <%= form.radio_button :device, 'remote', checked: true %>
          <%= form.label :device_remote, 'Afstandsbediening' %>
        </div>
      </div>

      <%= form.submit "Start", class: 'bg-emerald-500' %>
    <% end %>
  </div>
</div>

<div class="flex justify-center p-5">
  <p>Verbonden met "Scherm 1"</p>
</div>
