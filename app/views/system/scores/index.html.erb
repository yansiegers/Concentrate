<h2 class="text-lg">System - Scores</h2>
<%= link_to "New score", new_system_score_path %>

<% if @scores.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>House ID</th>
        <th>Value</th>
        <th>Created at</th>
        <th>Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% @scores.each do |score| %>
        <tr>
          <td><%= score.id %></td>
          <td>
            <% if score.house %>
              <%= "#{score.house.name} (#{score.house_id})" %>
            <% else %>
              -
            <% end %>
          </td>
          <td><%= score.value %></td>
          <td><%= score.created_at %></td>
          <td><%= score.updated_at %></td>
          <td>
            <%= link_to 'Edit', edit_system_score_path(score) %>
          </td>
          <td>
            <%= button_to 'Delete', [:system, score], method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
